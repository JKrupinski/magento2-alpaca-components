<div class="page-wrapper">
    {{ render '@header' }}

    <div class="container">
        {{ render '@heading' heading}}
        <div class="compare">
            <table class="compare__table">
                <thead>
                    <tr>
                        <th class="compare__label">
                            Product
                        </th>
                        {{#each products}}
                            <td class="compare__cell">
                                <a href="#" class="compare__link">
                                    {{ render '@image' img }}
                                </a>
                                <a href="#" class="compare__link">
                                    {{ name }}
                                </a>
                                {{ render '@rating' rating merge=true }}
                                {{ render '@price' price merge=true }}
                                <div class="compare__buttons-container">
                                    <form class="compare__form">
                                        {{ render '@button' cart }}
                                    </form>
                                    {{ render '@button' wishlist }}
                                </div>
                            </td>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    {{#each attributes}}
                        <tr>
                            <th class="compare__label">
                                {{ label }}
                            </th>
                            {{#each products}}
                                <td class="compare__cell">
                                    {{ this }}
                                </td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{ render '@footer' }}
