<div class="page-wrapper">
    {{ render '@header' }}

    <div class="dashboard container">
        <div class="grid">
            <div class="grid__column grid__column--1-4 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>

            <div class="
                grid__column
                grid__column--3-4
                dashboard__content
                wishlist
            ">
                <div class="grid wishlist__grid">
                    {{#each wishlistItems}}
                        <div class="wishlist__item grid__column grid__column--1-3">
                            <a href="#" title="{{ product.name.text }}">
                                {{ render '@image' product.image }}
                            </a>
                            <h2 class="wishlist__item-name">
                                {{ render '@link' product.name }}
                            </h2>
                            {{ render '@price' product.price merge=true }}

                            {{ render '@input--textarea' textarea }}

                            <div class="wishlist__item-inner">
                                {{ render '@input--inline' qty }}
                                <div class="wishlist__item-actions">
                                    {{ render '@button--icon' editIcon }}
                                    {{ render '@button--icon' removeIcon }}
                                </div>
                                <div class="
                                    wishlist__item-actions
                                    wishlist__item-actions--to-cart
                                ">
                                    {{ render '@button' addToCart }}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div class="action">
                    <div class="action__handler">
                        {{#each actions}}
                            {{ render '@button--secondary' this }}
                        {{/each}}
                    </div>
                    <div class="action__handler">
                        {{ render '@link' backLink }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{ render '@footer' }}
