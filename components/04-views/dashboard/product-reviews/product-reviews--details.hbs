<div class="page-wrapper">
    {{ render '@header' }}

    <div class="dashboard container">
        <div class="grid">
            <div class="grid__column grid__column--1-4 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>

            <div class="grid__column grid__column--3-4 dashboard__content">
                {{ render '@heading' title }}

                <a
                    href="#"
                    class="product-reviews__image"
                    title="{{ product.name.text }}"
                >
                    {{ render '@image' product.image }}
                </a>

                <div class="product-reviews__details">
                    <a href="#" title="{{ product.name.text }}">
                        {{ render '@heading' product.name }}
                    </a>
                    {{ render '@review--add' }}
                </div>

                {{ render '@heading' yourReview }}

                {{ render '@review' }}
            </div>
        </div>
    </div>
</div>

{{ render '@footer' }}
