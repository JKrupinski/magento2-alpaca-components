<div class="page-wrapper">
    {{ render '@header' }}
    <div class="dashboard container">
        <div class="grid">
            <div class="grid__column grid__column--1-4 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>
            <div class="grid__column grid__column--3-4 dashboard__content">
                <div class="requisition-list-view">
                    {{ render '@title-wrapper' titleWrapper }}
                    <p class="requisition-list-view__description">
                        {{ description }}
                    </p>
                </div>
                {{ render '@dashboard-actions-toolbar' }}
            </div>
        </div>
    </div>
</div>
{{ render '@footer' }}
