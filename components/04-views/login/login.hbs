{{ render '@header' }}

<div class="container">
    {{ render '@heading' mainHeading }}
    <main class="grid login">
        <div class="grid__column grid__column--1-2 login__form-column">
            {{ render '@heading' formHeading }}
            <p class="login__info">
                {{{ signInInfo }}}
            </p>
            <form class="login__form">
                <fieldset
                    class="fieldset login__fieldset {{ signInSection.fieldset.class }}"
                    {{{ signInSection.fieldset.attributes }}}
                >
                    <legend class="fieldset__legends login__legend {{ signInSection.legend.class }}"
                        {{{ signInSection.legend.attributes }}}
                    >
                        {{ signInSection.legend.text }}
                    </legend>
                    {{ render '@input' email }}
                    {{ render '@input' password }}
                </fieldset>
                <div class="login__actions">
                    {{ render '@button' loginButton }}
                    <a
                        href="{{ forgetPassword.href }}"
                        class="login__forgot-password"
                    >
                        {{ forgetPassword.text }}
                    </a>
                </div>
                <div class="login__validation-tips">
                    {{{ validationTips }}}
                </div>
            </form>
        </div>
        <div class="grid__column grid__column--1-2 login__link-column">
            {{ render '@heading' linkHeading }}
            <p class="login__info">
                {{ createAccountInfo }}
            </p>
            {{ render '@button' createAccountButton }}
        </div>
    </main>
</div>

{{ render '@footer' }}
