{{ render '@marketing-bar' }}
<header class="header">
    <div class="container">
        <div class="header__wrapper">
            <div class="header__menu-trigger">
                {{ render '@side-menu-trigger--span-way' }}
            </div>
            <div class="header__buttons">
                {{#each icons as |item| }}
                    <a class="header-button"
                       href="#"
                       aria-label="{{ item.ariaLabel }}"
                    >
                        <svg class="header-button__icon">
                            <use xlink:href="{{ svg item.icon }}"></use>
                        </svg>
                        <span class="header-button__text">
                            {{ item.text }}
                        </span>
                    </a>
                {{/each}}
                <div class="header__minicart">
                    {{ render '@minicart-trigger' trigger }}
                    {{ render '@popup' minicartPopup }}
                </div>
            </div>
            {{ render '@logo' logo }}
            <div class="header__search-wrapper">
                <form class="search-form">
                    {{ render '@input' searchInput }}
                    {{ render '@button--icon' searchButton }}
                </form>
            </div>
        </div>
    </div>
    {{ render '@side-menu' }}
</header>
{{ render '@mega-menu' }}
