<li class="dropdown-list__item dropdown-list__item--collapse filter {{ class }}">
    <div
        class="dropdown-list__label filter__label"
        aria-controls="{{ id }}"
        aria-expanded="false"
    >
        {{ render '@heading' title }}
        {{ render '@icon' icon }}
    </div>
    <div
        id="{{ id }}"
        class="dropdown-list__content filter__content"
        data-content="{{ id }}"
        aria-hidden="true"
    >
        {{ render '@list--link' categories }}
        <div class="filter__divider"></div>
    </div>
</li>
