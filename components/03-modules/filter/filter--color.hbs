<li class="dropdown-list__item dropdown-list__item--collapse filter">
    <div class="dropdown-list__label filter__label"
         data-dropdown="{{id}}"
    >
        {{title}}
        <svg class="dropdown-list__icon">
            <use href="{{ svg 'angle-down' }}"></use>
        </svg>
    </div>
    <div id="{{id}}"
         class="dropdown-list__content filter__content"
         data-content="{{id}}"
         aria-hidden="true"
    >
        <div class="filter__color">
            <div class="filter__color-option filter__color-option--active">
                <div class="filter__color-sample filter__color-sample--green"></div>
                <span class="filter__color-label">Różowy</span>
            </div>

            <div class="filter__color-option">
                <div class="filter__color-sample filter__color-sample--red"></div>
                <span class="filter__color-label">Pomarańczowy</span>
            </div>

            <div class="filter__color-option">
                <div class="filter__color-sample filter__color-sample--blue"></div>
                <span class="filter__color-label">Czerwony</span>
            </div>

            <div class="filter__color-option">
                <div class="filter__color-sample filter__color-sample--green"></div>
                <span class="filter__color-label">Green</span>
            </div>

            <div class="filter__color-option">
                <div class="filter__color-sample filter__color-sample--red"></div>
                <span class="filter__color-label">Red</span>
            </div>

            <div class="filter__color-option">
                <div class="filter__color-sample filter__color-sample--blue"></div>
                <span class="filter__color-label">Blue</span>
            </div>
        </div>
        <div class="filter__divider"></div>
    </div>
</li>
