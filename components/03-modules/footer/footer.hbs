<footer class="footer">
    <div class="container footer__handler">
        <section class="footer__newsletter">
            {{ render '@newsletter' }}
        </section>

        <section class="footer__links">
            {{ render '@dropdown-list' linkList }}
        </section>
    </div>

    <section class="footer__bottom-bar">
        <div class="container footer__bottom-bar-handler">
            <div class="footer__social-handler">
                <span class="footer__social-list-subtitle">
                    {{ socialListSubtitle }}
                </span>

                {{ render '@list--icon' socialIconList }}
            </div>

            <small class="footer__copyright">
                {{ copyrightText }}
            </small>
        </div>
    </section>
</footer>
