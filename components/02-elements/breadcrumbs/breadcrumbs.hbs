<ol
    class="breadcrumbs {{ class }}" {{{ attributes }}}
    aria-label="{{ ariaLabel }}"
    role="navigation"
>
    {{#each categories}}
        {{#if @last}}
            <li
                class="breadcrumbs__item"
            >
                {{ name }}
            </li>
        {{else}}
            <li class="breadcrumbs__item">
                <a
                    href="{{ href }}"
                    class="{{ linkClass }}"
                >
                    {{ name }}
                </a>
            </li>
        {{/if}}
    {{/each}}
</ol>

