<div class="breadcrumbs">
    {{#each categories}}
        {{#if @last}}
            <span class="breadcrumbs__item">
                {{ this }}
            </span>
        {{else}}
            <span class="breadcrumbs__item">
                <a href="#" class="breadcrumbs__link">
                    {{ this }}
                </a>
            </span>
        {{/if}}
    {{/each}}
</div>
