<{{{ tag }}} class="button {{ class }}" {{{ attributes }}}>
    {{{ text }}}
    {{#if iconId }}
        <svg
            class="{{ iconClass }}"
            {{#if iconHidden}}
                role="presentation"
            {{else}}
                role="img"
            {{/if}}
        >
            {{#if iconTitle }}
                <title>{{ iconTitle }}</title>
            {{/if}}
            <use xlink:href="{{ svg iconId }}"></use>
        </svg>
    {{/if}}
</{{{ tag }}}>
