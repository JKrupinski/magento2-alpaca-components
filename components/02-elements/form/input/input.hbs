<div class="input {{ class }}" {{{ attribute }}}>
    <label class="input__label {{ label.class }}"
           for="input"
           {{{ label.attribute }}}
    >
        {{ label.text }}
    </label>

    <input class="input__field {{ input.class }}"
           id="input"
           type="text"
           placeholder="{{ input.placeholder }}"
           {{{ input.attribute }}}
    >
</div>
