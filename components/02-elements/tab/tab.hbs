<div class="tab {{#if modifier}}tab--{{modifier}}{{/if}}">
    {{#each tabs as |tab|}}
        <div class="tab__title {{#if active}}tab__title--active{{/if}} {{ class.title }}"
             data-tab="{{ tabId }}"
        >
            {{ title }}
            {{ icon.iconId }}
            <div class="tab__icon {{ class.tabIconWrapper }}">
                {{render '@icon' icon }}
            </div>
        </div>

        <div class="
                 tab__content
                 {{#if active}}tab__content--active{{/if}}
                 {{ class.content }}
             "
             data-content="{{ tabId }}"
        >
            {{{ content }}}
        </div>
    {{/each}}
</div>

<script src="{{static 'tab.js' }}"></script>
