<table class="table table--odd-even {{ class }}" {{{ additionalAttributes }}}>
    {{#each mainTags }}
        <{{{ mainTag }}}>
            {{#each rowTags}}
                <{{{ rowTag }}} {{ rowTagAttributes }}>
                    {{#each childTags}}
                        <{{{ childTag }}} 
                             class="{{ childTagClasses }}" 
                             {{{ childTabAttributes }}}
                        >
                            {{ content }}
                        </{{{ childTag }}}>
                    {{/each}}
                </{{{ rowTag }}}>
            {{/each}}
        </{{{ mainTag }}}>
    {{/each}}
</table>
