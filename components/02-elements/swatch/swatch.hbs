<div class="swatch {{ class }}" {{{ attributes }}}>
    {{#if heading}}
        <{{{ heading.tag }}} class="swatch__title {{ heading.class }}">
            {{ heading.text }}
        </{{{ heading.tag }}}>
    {{/if}}

    {{#each options }}
        <div class="swatch__container {{ this.class }}">
            <div
                class="swatch__option {{ this.optionClass}}"
                {{{ this.attributes }}}
            >
                {{ this.text }}
            </div>
        </div>
    {{/each }}
</div>
